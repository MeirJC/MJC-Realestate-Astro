---
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome';
import { faBed, faBath } from '@fortawesome/free-solid-svg-icons';
import numeral from 'numeral';
type Props = {
  price: string;
  bedrooms: string;
  bathrooms: string;
};

const { price, bedrooms, bathrooms } = Astro.props;
const formattedPrice = numeral(price).format('0,0');
---

<div class="bg-event-horizon max-w-sm mx-auto w-full text-white p-5">
  <p class="text-center text-3xl">&euro; {formattedPrice}</p>
  <div class="flex text-lg justify-center gap-8 pt-2">
    <div><FontAwesomeIcon icon={faBed} className="pr-3" />{bedrooms}</div>
    <div><FontAwesomeIcon icon={faBath} className="pr-3" />{bathrooms}</div>
  </div>
</div>
