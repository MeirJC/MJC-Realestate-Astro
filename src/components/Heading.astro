---
import type { HTMLTag } from "astro/types";
type Props = {
  classes: string;
  styles: string;
  level: 1 | 2 | 3 | 4 | 5 | 6;
  content: string;
};
const { classes, styles, level, content } = Astro.props;
const Element: HTMLTag = `h${level}`;
---

<Element set:html={content} style={styles} class={classes} />
